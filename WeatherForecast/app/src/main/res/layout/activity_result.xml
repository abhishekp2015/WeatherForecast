<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhishekprasad.myweatherforecast.ResultActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE DETAILS"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18px"
        android:layout_alignBottom="@+id/imageButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW MAP"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button3"
        android:textSize="18px"
        android:layout_alignBottom="@+id/button3" />

    <ImageButton
        android:layout_width="60px"
        android:layout_height="60px"
        android:id="@+id/imageButton"
        android:background="@drawable/fb_icon"
        android:layout_marginTop="8px"
        android:layout_alignRight="@id/button4"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/imageView"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView7"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView8"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView9"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/precip"
        android:layout_width="0sp"
        android:layout_height="wrap_content"

        android:padding="10sp"
        android:layout_weight="1"
        android:text="Precipitation"
        android:gravity="left" />
    <TextView
        android:id="@+id/precipVal"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_margin="4sp"
        android:layout_weight="1"
        android:text="Column 2"
        android:gravity="right"
        android:layout_column="16" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32sp"
        android:id="@+id/tablelayout1"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true">
        <TableRow>
            <TextView
                android:id="@+id/precipitation"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Precipitation"
                android:gravity="left" />
            <TextView
                android:id="@+id/precipitationValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"
                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/rain"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Chance of Rain"
                android:gravity="left" />
            <TextView
                android:id="@+id/rainValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"

                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/wind"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Wind Speed"
                android:gravity="left" />
            <TextView
                android:id="@+id/windValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"
                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/dew"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Dew Point"
                android:gravity="left" />

            <TextView
                android:id="@+id/dewValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"

                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow><TableRow>
        <TextView
            android:id="@+id/humidity"
            android:layout_width="0sp"
            android:layout_height="wrap_content"

            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="0sp"
            android:layout_weight="1"
            android:text="Humidity"
            android:gravity="left" />

        <TextView
            android:id="@+id/humidityValue"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingRight="0sp"

            android:layout_weight="1"
            android:text="Column 2"
            android:gravity="right"
            android:layout_column="16" />
    </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/visibility"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Visibility"
                android:gravity="left" />
            <TextView
                android:id="@+id/visibilityValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"

                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/rise"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Sunrise"
                android:gravity="left" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/riseValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"

                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/set"
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="0sp"
                android:layout_weight="1"
                android:text="Sunset"
                android:gravity="left" />

            <TextView
                android:id="@+id/setValue"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="0sp"

                android:layout_weight="1"
                android:text="Column 2"
                android:gravity="right"
                android:layout_column="16" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="F"
        android:id="@+id/textView10"
        android:textSize="12dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginStart="4dp" />
</RelativeLayout>
</ScrollView>
